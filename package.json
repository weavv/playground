{
  "name": "weavv-playground",
  "windowtitle": "WEAVV CSS Playground",
  "description": "A developer playground IDE for testing and prototyping UI with WEAVV CSS framework.",
  "author": "Louis Low (iamlouislow@gmail.com)",
  "license": "MIT",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "app": "electron app.js",
    "build:app": "vue-cli-service build",
    "build:native:all": "npm run build:app && electron-builder -lwm",
    "build:native:linux": "npm run build:app && electron-builder -l",
    "build:native:windows": "npm run build:app && electron-builder -w",
    "build:native:mac": "npm run build:app && electron-builder -m",
    "clean": "rm -rfv ./dist ./app"
  },
  "dependencies": {
    "core-js": "^2.6.5",
    "element-ui": "^2.10.1",
    "express": "^4.17.1",
    "monaco-editor": "^0.24.0",
    "path": "^0.12.7",
    "vue": "^2.6.10",
    "vue-router": "^3.0.3"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.9.0",
    "@vue/cli-plugin-eslint": "^3.9.0",
    "@vue/cli-service": "^3.9.0",
    "babel-eslint": "^10.0.1",
    "babel-plugin-component": "^1.1.1",
    "compression-webpack-plugin": "^3.0.0",
    "electron": "^13.0.1",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "monaco-editor-webpack-plugin": "^1.7.0",
    "uglifyjs-webpack-plugin": "^2.1.3",
    "vue-template-compiler": "^2.6.10",
    "weavvcss": "^1.0.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "linux": {
    "target": [
      "AppImage",
      "deb"
    ],
    "icon": "build/icons/"
  },
  "windows": {
    "target": [
      "portable",
      "nsis"
    ],
    "icon": "build/icons/"
  },
  "mac": {
    "target": [
      "dmg"
    ],
    "icon": "build/icons/"
  },
  "build": {
    "appId": "weavv.playground",
    "mac": {
      "category": "weavv.playground.dev.ide"
    }
  }
}
